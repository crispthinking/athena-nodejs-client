{
  "name": "@crispthinking/athena-classifier-sdk",
  "version": "0.2.0",
  "main": "./dist/src/index.js",
  "description": "A Node.js SDK for the Athena classifier that uses gRPC transport.",
  "type": "module",
  "engines": {
    "node": ">= 22.11 < 23"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@eslint/js": "~9.17",
    "@protobuf-ts/plugin": "^2.11.1",
    "@types/brotli": "^1.3.4",
    "@types/eslint__js": "~8.42",
    "@types/node": "~20",
    "@typescript-eslint/parser": "~8.19",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/eslint-plugin": "~1.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "~9.1",
    "globals": "~15.14",
    "grpc_tools_node_protoc": "^1.0.0",
    "grpc-tools": "^1.13.0",
    "prettier": "~3.4",
    "rimraf": "~6.0",
    "ts-api-utils": "~2.0",
    "ts-proto": "^2.7.7",
    "typed-emitter": "^2.1.0",
    "typedoc": "^0.28.11",
    "typescript": "~5.7",
    "typescript-eslint": "~8.19",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "start": "node build/src/main.js",
    "clean": "rimraf coverage build tmp",
    "prebuild": "npm run lint",
    "build:documentation": "typedoc --readme ./README.md src/main.ts",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc -w -p tsconfig.json",
    "build:release": "npm run clean && tsc -p tsconfig.release.json",
    "codegen": "npx protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out=client_grpc1:./src/athena --proto_path=./athena-protobufs/athena-protobufs/athena ./athena-protobufs/athena-protobufs/athena/athena.proto",
    "lint": "eslint .",
    "lint:all": "npm run lint && npm run prettier:check && npx tsc --noEmit",
    "precommit:setup": "echo 'To install pre-commit hooks, run: uv tool install pre-commit && uvx pre-commit install'",
    "test": "vitest run unit --config __tests__/vitest.config.ts",
    "test:coverage": "vitest run unit --config __tests__/vitest.config.ts --coverage.enabled --coverage.all",
    "prettier": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --write",
    "prettier:check": "prettier \"{src,__{tests}__}/**/*.{ts,mts}\" --config .prettierrc --check",
    "test:watch": "vitest unit"
  },
  "author": "James Abbott <abbottdev@users.noreply.github.com>",
  "license": "MIT",
  "dependencies": {
    "@bufbuild/protobuf": "^2.7.0",
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.8.0",
    "@protobuf-ts/grpc-transport": "^2.11.1",
    "brotli": "^1.3.3",
    "jwt-decode": "^4.0.0",
    "openid-client": "^6.7.0",
    "protobufjs": "^7.5.4",
    "rxjs": "^7.8.2",
    "sharp": "^0.34.3",
    "tslib": "~2.8"
  },
  "volta": {
    "node": "22.12.0"
  }
}
